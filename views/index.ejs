<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real-Time Weather Monitoring</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><i class="fas fa-cloud-sun"></i> Real-Time Weather Monitoring</h1>
      <p>Stay updated with the latest weather conditions!</p>
    </header>

    <section class="current-weather">
      <h2>Current Weather</h2>
      <table class="weather-table">
        <thead>
          <tr>
            <th>City</th>
            <th>Temperature (°C)</th>
            <th>Feels Like (°C)</th>
            <th>Condition</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% 
            // Create a Set to track unique cities
            const uniqueCities = new Set();
            weatherData.forEach(function(data) {
              if (!uniqueCities.has(data.city)) {
                uniqueCities.add(data.city); // Add city to the set
                %>
                <tr>
                  <td><%= data.city %></td>
                  <td><%= data.temp.toFixed(1) %></td>
                  <td><%= data.feels_like.toFixed(1) %></td>
                  <td><%= data.main %></td>
                  <td><%= new Date(data.dt * 1000).toLocaleString() %></td>
                </tr>
                <% 
              } 
            }); 
          %>
        </tbody>
      </table>
    </section>

    <section class="daily-summaries">
      <h2>Daily Summaries</h2>
      <table class="summary-table">
        <thead>
          <tr>
            <th>City</th>
            <th>Date</th>
            <th>Condition</th>
            <th>Average Temperature (°C)</th>
          </tr>
        </thead>
        <tbody>
          <% if (dailySummaries.length > 0) { %>
            <% dailySummaries.forEach(function(summary) { %>
              <tr>
                <td><%= summary.city %></td>
                <td><%= summary.date %></td>
                <td><%= summary.dominant_condition %></td>
                <td><%= summary.avg_temp.toFixed(1) %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4">No daily summary data available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>

    <footer>
      <p>© 2024 Real-Time Weather Monitoring. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>
